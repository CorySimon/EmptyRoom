CC = g++
CFLAGS = -O3 -arch sm_20 g
NVCCFLAGS = -g -O3 -arch sm_20
LIBS = -lm

all: gcmc2

gcmc2: gcmc.o Framework.o Forcefield.o pocketblocking.o
	$(CC) -o $@ gcmc.o Framework.o Forcefield.o pocketblocking.o

pocketblocking.o: pocketblocking.cpp
	$(CC) -c pocketblocking.cpp

gcmc.o: gcmc.cpp
	$(CC) -c gcmc.cpp -std=c++11

Framework.o: Framework.cpp
	$(CC) -c Framework.cpp

Forcefield.o: Forcefield.cpp
	$(CC) -c Forcefield.cpp

clean: 
	rm *.o 
